@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<p class="login-box-msg">Register a new membership</p>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="input-group mb-3">
        <label asp-for="Input.FirstName" class="sr-only"></label>
        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Input.LastName" class="sr-only"></label>
        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Input.Email" class="sr-only"></label>
        <input asp-for="Input.Email" class="form-control" placeholder="Email">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Input.Password" class="sr-only"></label>
        <input asp-for="Input.Password" class="form-control" placeholder="Password">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype password">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
        <!-- /.col -->
    </div>
</form>

<a asp-page="./Login" class="text-center">I already have a membership</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
