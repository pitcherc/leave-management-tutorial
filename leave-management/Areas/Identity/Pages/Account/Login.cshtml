@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}
<section>
    <p class="login-box-msg">Sign in to start your session</p>

    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group mb-3">
            <label class="sr-only" asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <label class="sr-only" asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="icheck-primary">
                    <input asp-for="Input.RememberMe" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <p class="mb-1">
        <a id="forgot-password" asp-page="./ForgotPassword">I forgot my password</a>
    </p>
    <p class="mb-0">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register a new membership</a>
    </p>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
